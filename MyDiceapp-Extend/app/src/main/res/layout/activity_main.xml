<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/layourDices"
        android:layout_width="414dp"
        android:layout_height="540dp"
        android:background="@color/black"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imgDice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1"
            />
        <ImageView
            android:id="@+id/imgDice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice2"
            android:layout_margin="30dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds ="true"/>

        <ImageView
            android:id="@+id/imgDice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice3"
            android:layout_margin="30dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds ="true"/>


        <ImageView
            android:id="@+id/imgDice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice4" />

        <ImageView
            android:id="@+id/imgDice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice5"
            android:layout_margin="30dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds ="true"/>

        <ImageView
            android:id="@+id/imgDice6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice6"
            android:layout_margin="30dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds ="true"/>

    </GridLayout>

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Roll"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="554dp" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="633dp"
        tools:ignore="MissingConstraints" />

    <NumberPicker
        android:id="@+id/spinnerNumber"
        android:layout_width="70dp"
        android:layout_height="83dp"
        android:background="@color/teal_200"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="599dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>